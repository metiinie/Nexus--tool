generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String              @id @default(uuid())
  email               String              @unique
  name                String?
  bio                 String?             @default("")
  preferences         String?             @default("{}")
  passwordHash        String
  isVerified          Boolean             @default(false)
  verificationToken   String?
  verificationExpires DateTime?
  resetToken          String?
  resetExpires        DateTime?
  twoFactorSecret     String?
  twoFactorEnabled    Boolean             @default(false)
  tokenVersion        Int                 @default(0)
  role                String              @default("operator")
  xp                  Int                 @default(0)
  level               Int                 @default(1)
  notificationPrefs   String?             @default("{}")
  quietHours          String?             @default("{}")
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  activities          Activity[]          @relation("ActivityActor")
  habits              Habit[]
  notifications       Notification[]
  notificationAudits  NotificationAudit[]
  securityLogs        SecurityLog[]
  squadMessages       SquadChat[]
  assignedTasks       Task[]              @relation("TaskAssignee")
  tasks               Task[]
  resolvedComments    TaskComment[]       @relation("CommentResolver")
  taskComments        TaskComment[]       @relation("CommentAuthor")
  teamMembers         TeamMember[]
  userAchievements    UserAchievement[]
  xpEvents            XpEvent[]
}

model NotificationAudit {
  id        String   @id @default(uuid())
  userId    String
  type      String
  channel   String
  reason    String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model AchievementDefinition {
  id               String            @id @default(uuid())
  key              String            @unique
  title            String
  description      String
  icon             String
  category         String
  target           Int               @default(1)
  rules            String?           @default("{}")
  version          Int               @default(1)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  userAchievements UserAchievement[]
}

model UserAchievement {
  id                      String                @id @default(uuid())
  userId                  String
  achievementDefinitionId String
  unlockedAt              DateTime              @default(now())
  unlockedReason          String?
  achievementDefinition   AchievementDefinition @relation(fields: [achievementDefinitionId], references: [id])
  user                    User                  @relation(fields: [userId], references: [id])

  @@unique([userId, achievementDefinitionId])
}

model SecurityLog {
  id        String   @id @default(uuid())
  userId    String
  event     String
  ip        String?
  userAgent String?
  metadata  String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  message   String
  priority  String   @default("medium")
  isRead    Boolean  @default(false)
  metadata  String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Task {
  id          String        @id @default(uuid())
  userId      String
  assigneeId  String?
  teamId      String?
  title       String
  description String?       @default("")
  status      String        @default("todo")
  priority    String        @default("medium")
  dueDate     DateTime?
  order       Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  assignee    User?         @relation("TaskAssignee", fields: [assigneeId], references: [id])
  team        Team?         @relation(fields: [teamId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
  comments    TaskComment[]
}

model TaskComment {
  id           String   @id @default(uuid())
  taskId       String
  userId       String
  content      String
  type         String   @default("standard")
  resolved     Boolean  @default(false)
  resolvedById String?
  createdAt    DateTime @default(now())
  resolvedBy   User?    @relation("CommentResolver", fields: [resolvedById], references: [id])
  task         Task     @relation(fields: [taskId], references: [id])
  user         User     @relation("CommentAuthor", fields: [userId], references: [id])
}

model Habit {
  id        String     @id @default(uuid())
  userId    String
  title     String
  frequency String     @default("daily")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  logs      HabitLog[]
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  date      DateTime
  completed Boolean  @default(true)
  createdAt DateTime @default(now())
  habit     Habit    @relation(fields: [habitId], references: [id])

  @@unique([habitId, date])
}

model XpEvent {
  id        String   @id @default(uuid())
  userId    String
  source    String
  value     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Team {
  id           String       @id @default(uuid())
  name         String
  code         String       @unique
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  activities   Activity[]
  chatMessages SquadChat[]
  tasks        Task[]
  members      TeamMember[]
}

model TeamMember {
  id       String   @id @default(uuid())
  userId   String
  teamId   String
  role     String   @default("operator")
  joinedAt DateTime @default(now())
  team     Team     @relation(fields: [teamId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([userId, teamId])
}

model SquadChat {
  id        String   @id @default(uuid())
  teamId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Activity {
  id        String   @id @default(uuid())
  teamId    String
  actorId   String
  type      String
  metadata  String?
  createdAt DateTime @default(now())
  actor     User     @relation("ActivityActor", fields: [actorId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])
}
