generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String?
  bio          String?       @default("")
  preferences  String?       @default("{}") // JSON string for UI prefs
  passwordHash String
  xp           Int           @default(0)
  level        Int           @default(1)
  tasks        Task[]
  assignedTasks Task[]       @relation("TaskAssignee")
  habits       Habit[]
  xpEvents     XpEvent[]
  teamMembers  TeamMember[]
  activities   Activity[]    @relation("ActivityActor")
  notifications Notification[]
  taskComments  TaskComment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // critical_deadline | habit_at_risk | level_up | system_alert
  title     String
  message   String
  priority  String   @default("medium") // low | medium | high | urgent
  isRead    Boolean  @default(false)
  metadata  String?  // JSON string
  createdAt DateTime @default(now())
}

model Task {
  id          String        @id @default(uuid())
  userId      String        // Creator
  user        User          @relation(fields: [userId], references: [id])
  assigneeId  String?       // Assigned operator
  assignee    User?         @relation("TaskAssignee", fields: [assigneeId], references: [id])
  teamId      String?       // Optional: shared tasks belong to a team
  team        Team?         @relation(fields: [teamId], references: [id])
  title       String
  description String?       @default("")
  status      String        @default("todo")
  priority    String        @default("medium")
  dueDate     DateTime?
  order       Int           @default(0)
  comments    TaskComment[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model TaskComment {
  id        String   @id @default(uuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Habit {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  title     String
  frequency String     @default("daily")
  logs      HabitLog[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id])
  date      DateTime
  completed Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([habitId, date])
}

model XpEvent {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  source    String   // task | habit
  value     Int
  createdAt DateTime @default(now())
}

// ============ COLLABORATION MODELS ============

model Team {
  id          String       @id @default(uuid())
  name        String
  code        String       @unique // Join code for invites
  members     TeamMember[]
  tasks       Task[]
  activities  Activity[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
  role      String   @default("member") // owner | admin | member
  joinedAt  DateTime @default(now())

  @@unique([userId, teamId])
}

model Activity {
  id        String   @id @default(uuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
  actorId   String
  actor     User     @relation("ActivityActor", fields: [actorId], references: [id])
  type      String   // task_created | task_completed | member_joined | level_up
  metadata  String?  // JSON string for extra data
  createdAt DateTime @default(now())
}
